<%= form_for @repair, url: car_repairs_path, html: { method: :post }  do |f| %>
  <%= render 'shared/error_messages', object: @repair %>

  <%= f.label :repair_date %>
  <%= f.date_field :repair_date, placeholder: "Tankdatum", class: 'form-control' %>

  <%= f.label :title %>
  <%= f.text_field :title, placeholder: true, class: 'form-control' %>

  <%= f.label :description %>
  <%= f.text_area  :description, placeholder: true, class: 'form-control', :rows => "8" %>

  <%= f.label :billings_amount %>
  <%= f.number_field :billings_amount, placeholder: true, class: 'form-control' %>

  <%= f.label :garage %>
  <%= f.text_field :garage, placeholder: true, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-success" %>
<% end %>