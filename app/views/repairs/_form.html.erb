<%= simple_form_for @repair, url: car_repairs_path, html: { method: :post }  do |f| %>
  <%= f.input :repair_date %>
  <%= f.input :title %>
  <%= f.input :description, 
      :as   => :text,
      :input_html => {:rows => 9 }
      %>
  <%= f.input :billings_amount, value: number_to_currency(f.object.billings_amount.to_f), step: :any %>

  <%= f.input :garage %>
  <%= f.input :file, 
        :as   => :file,
        :accept => 'image/jpeg,image/gif,image/png,application/pdf'
      %>
  <%= f.button :submit, yield(:button_text), class: "btn btn-success" %>
<% end %>