<%= simple_form_for @refuelling, url: car_refuellings_path, html: { method: :post }  do |f| %>
  <%= f.input :refuel_date %>
  <%= f.input :milage %>
  <%= f.input :cents_per_liter %>
  <%= f.input :liters %>
  <%= f.input :filling_station, input_html: { maxlength: 100 } %>
  <%= f.input :location, input_html: { maxlength: 50 } %>
  <%= f.input :filled_up, 
              :collection => [[true, 'Ja'], [false, 'Nein']],
              :label_method => :last, # 'last' refers to the second value in the arrays above: 'Ja' and 'Nein' 
              :value_method => :first,
              :as => :radio_buttons,
              :item_wrapper_class => 'inline',
              :checked => true %>
  <%= f.button :submit, yield(:button_text), class: "btn btn-success" %>
<% end %>