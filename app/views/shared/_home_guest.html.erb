<div class="center jumbotron">
  <div id ="login_panel">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
      <p>Logge dich ein:</p>
      <%= simple_form_for(:session, :url =>login_path) do |f| %>
        <%= f.input :email %>
        <%= f.input :password %>
        <p id="paragraph_new_user">
          <%= link_to "Passwort Vergessen?", new_password_reset_path %>
        </p>
        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span>Angemeldet bleiben</span>
        <% end %>
        <%= f.submit "Einloggen", class: "btn btn-primary" %>
      <% end %>
      <p id="paragraph_new_user">Neuer Benutzer? <%= link_to "Hier gehts zur Anmeldung!", signup_path %></p>
      <%= image_tag("citroen.jpg", width: '100%', alt: "Edit Entry", id: 'startpage_image') %>
      </div>
    </div>
  </div>
</div>