<%= form_for(@car) do |f| %>
  <%= render 'shared/error_messages', object: @car %>

  <div>
  <h2>Angaben zum Auto</h2>
  </div>

  <div>
  <%= f.label :car_name %>
  <%= f.text_field :car_name, placeholder: true, class: 'form-control' %>

  <%= f.label :car_brand %>
  <%= f.text_field :car_brand, placeholder: true, class: 'form-control' %>

  <%= f.label :car_model %>
  <%= f.text_field :car_model, placeholder: true, class: 'form-control' %>

  <%= f.label :numberplate %>
  <%= f.text_field :numberplate, placeholder: true, class: 'form-control' %>

  <%= f.radio_button :fuel_type, 'Diesel', :checked => true %> 
  <%= label :fuel_type, 'Diesel' %>
  <%= f.radio_button :fuel_type, 'Benzin' %>
  <%= label :fuel_type, 'Benzin'  %>
<br>
  <%= f.label :cubic_capacity %>
  <%= f.number_field :cubic_capacity,placeholder: true, class: 'form-control' %>

  <%= f.label :engine_power %>
  <%= f.number_field :engine_power, placeholder: true, class: 'form-control' %>
  </div>

  <div>
  <h2>Angaben zum Kauf</h2>
  </div>

  <%= f.label :seller %>
  <%= f.text_field :seller,placeholder: true, class: 'form-control' %>

  <%= f.label :purchase_date %>
  <%= f.date_field :purchase_date, placeholder: true, class: 'form-control' %>

  <%= f.label :purchase_price %>
  <%= f.number_field :purchase_price, placeholder: true, class: 'form-control' %>

  <%= f.label :registrationdate %>
  <%= f.date_field :registrationdate, placeholder: true, class: 'form-control' %>

  <%= f.label :milage_purchase_date %>
  <%= f.number_field :milage_purchase_date, placeholder: true, class: 'form-control' %>

  <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>

  <%= f.submit yield(:button_text), class: "btn btn-success" %>

<% end %>

<script type="text/javascript">
  $('#car_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 3) {
      alert('Maximum file size is 3MB. Please choose a smaller file.');
    }
  });
</script>
